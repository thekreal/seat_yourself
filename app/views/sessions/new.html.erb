<% provide :page_title, "Sign In" %>

<div id="signin" class="form">
  <%= form_for :session, url: sessions_path, html: { class: "form-container" } do |f| %>
    <legend>Sign In</legend>

    <div class="form-field">
      <%= f.label :email, for: "email", class: "form-label" %>
      <div class="form-controls">
        <%= f.text_field :email, id: "email", class: "form-input" %>
      </div>
    </div>

    <div class="form-field">
      <%= f.label :password, for: "password", class: "form-label" %>
      <div class="form-controls">
        <%= f.password_field :password, id: "password", class: "form-input" %>
      </div>
    </div>

    <div class="form-field">
      <div class="form-label"></div>
      <div class="form-controls">
        <%= f.submit "Sign In", class: "form-btn" %>
      </div>
    </div>

  <% end %>
</div>