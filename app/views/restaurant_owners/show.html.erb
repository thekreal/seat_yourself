<% provide :page_title, "#{@user.name}'s Profile".html_safe %>

<div class="container">

  <!-- Renders 'members/_member.html.erb' -->
  <%= render @user, user: @user %>

  <div id="user-restaurants" class="feeds">
    <%= link_to 'New Restaurant', new_restaurant_path, class: "control" %>

    <legend>MY RESTAURANTS</legend>

    <% @user.restaurants.each do |restaurant| %>

      <!-- Render reservations/_reservations.html.erb -->
      <%= render restaurant %>

      <% restaurant.locations.each do |location| %>

        <%= render location %>

      <% end %>
    <% end %>
  </div>

