<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="form-error">
      <strong>There are <%= pluralize(object.errors.size, 'error') %></strong>
      <ul>
        <% object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>