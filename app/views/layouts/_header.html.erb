<header id="site-menu">
  <a href="/" id="site-logo"><%= site_name %></a>

  <% if signed_in? %>
    <%= link_to image_tag(current_user.gravatar(50)), current_user %>
  <% else %>
    <%= link_to 'Sign In', :signin, class: "site-menu-control" %>
    <%= link_to 'Sign Up', :signup, class: "site-menu-control" %>
  <% end %>

</header>