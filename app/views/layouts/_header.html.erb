<header id="site-menu">
  <a href="/" id="site-logo"><%= site_name %></a>

  <div id="menu">
  <% if signed_in? %>
    <%= link_to image_tag(current_user.gravatar(50)), current_user %>
    <%= link_to "SIGN OUT", :signout, class: "over-control" %>
  <% else %>
    <%= link_to 'Sign In', :signin, id: "signin", class: "btn-header" %>
    <%= link_to 'Member Sign Up', :member_signup, id: "signup", class: "btn-header" %>
  <% end %>
  </div>

</header>