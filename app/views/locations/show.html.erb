<h1><%= @restaurant.name %> </h1>
	<p> <%= @location.address %> </p>
	<p><%= @location.open_hours %></p>

	<% if signed_in? %>

		<p><%= link_to "Make a reservation at this location", new_location_reservation_path(@location) %></p>
		<% else %>

			<p>Please <%= link_to "login", signin_path %> to make a reservation</p>
		<% end %>